generator client {
  provider = "prisma-client-js"
  // previewFeatures = ["driverAdapters"] // Eğer hata alırsan bu satırı ekle
}

datasource db {
  provider = "postgresql"
  // url satırı tamamen silindi
}
model Racer {
  id                String   @id @default(cuid())
  email             String   @unique
  emailVerified     Boolean  @default(false)
  verificationCode  String?
  codeCreatedAt     DateTime?
  
  // Kişisel Bilgiler
  firstName         String?
  lastName          String?
  gender            String?
  birthDate         DateTime?
  nationality       String?
  phone             String?
  idNumber          String?
  address           String?
  emergencyPhone1   String?
  emergencyPhone2   String?

  // Ek Hizmetler & Durum
  hasLicense        Boolean  @default(false)
  needsTransfer     Boolean  @default(false)
  needsBikeRental   Boolean  @default(false)
  paymentStatus     String   @default("PENDING") // PENDING, SUCCESS, FAILED
  createdAt         DateTime @default(now())
}